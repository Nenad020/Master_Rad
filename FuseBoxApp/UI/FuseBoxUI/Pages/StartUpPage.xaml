<Page x:Class="FuseBoxUI.Pages.StartUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FuseBoxUI.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartUpPage">

	<Border Background="{StaticResource WordBlueBrush}">
		<Grid>
			<!-- Blue background image -->
			<Grid.Background>
				<ImageBrush TileMode="FlipXY" ViewportUnits="Absolute" Viewport="0 120 500 500" ImageSource="/Images/Background/background-abstract.png" />
			</Grid.Background>

			<!-- Main content scroll -->
			<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
			</ScrollViewer>
		</Grid>
	</Border>
</Page>